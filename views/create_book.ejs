<form class="form font-weight-bolder p-4" method="post" action="/admin/create">
    <div class="row p-2">
        <div class="col">
          <label for ="bookName">Book Name :</label>
          <input type="text" class="form-control" name="bookName" required>
        </div>
        <div class="col">
          <label for ="isbn">Book ISBN :</label>
          <input type="text" class="form-control" name="isbn" required>
        </div>
    </div>
    <div class="row p-2">
        <div class="col">
            <label for ="description">Description :</label>
            <input type="text" class="form-control" name="description" required>
        </div>
    </div>
    <p class="font-weight-normal mt-4 lead text-monospace">Press Enter To Input Multiple Elements :</p>
    <div class="row px-2 pb-2">
        <div class="col">
            <label for ="tags">Tags :</label>
            <input type="text" class="form-control" data-role="tagsinput" name="tags" required/>
        </div>
    </div>    
    <div class="row p-2">
        <div class="col">
            <label for ="author">Authors : </label>
            <input type="text" class="form-control" data-role="tagsinput" name="author" required/>
        </div>        
    </div>
    <div class="row p-2">
        <div class="col">
            <label for ="copies">Book Copy ID : </label>
            <input type="text" class="form-control" data-role="tagsinput" name="copies" required/>
        </div>
    </div>

    <button type="submit" class="btn btn-primary text m-2" value="addbook">Add Book</button>
</form>