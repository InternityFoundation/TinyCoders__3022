<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>   
  <script src="https://bootstrap-tagsinput.github.io/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
</head>

<h1 class="jumbotron font-weight-bolder text-center">Registeration Page</h1>

<form class="form font-weight-bolder p-3 m-3" method="post" action="/register">
  <h1><b>Personal Details :</b></h1>
  <div class="row my-4">
      <div class="col">
        <label for ="firstName">First Name :</label>
        <input type="text" class="form-control" name="firstName" required>
      </div>
      <div class="col">
        <label for ="middleName">Middle Name :</label>
        <input type="text" class="form-control" name="middleName" required>
      </div>
      <div class="col">
        <label for ="lastName">Last Name :</label>
        <input type="text" class="form-control" name="lastName" required>
      </div>
  </div>
  <div class="row mb-4">
    <div class="col">
      <label for ="email">Email:</label>
      <input type="text" class="form-control" name="email" required>
    </div>
    <div class="col">
      <label for ="contact">Phone number:</label>
      <input type="number" class="form-control" name="contact" required>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <label for ="gender">Gender:</label><br>
      <input type="radio" id="male" name="gender" value="male">    
      <label for="male" class="mr-5">Male</label>
      <input type="radio" id="female" name="gender" value="female">
      <label for="female" class="mr-5">Female</label>
      <input type="radio" id="other" name="gender" value="other">
      <label for="other" class="mr-5">Other</label>
      
    </div>
    <div class="col">
      <label for ="location">Native location:</label>
      <input type="text" class="form-control" name="location" required>
    </div>
  </div>
  <div class="row p-2 mb-4">
    <div class="col-6">
        <label for ="languages">Languages known : </label>
        <input type="text" class="form-control" data-role="tagsinput" name="languages" required/>
    </div>        
  </div>
  <h1><b>Professional Details :</b></h1>

  <div class="row mb-4">
    <div class="col">
      <label for ="education">Educational institute/university:</label>
      <input type="text" class="form-control" name="education" required>
    </div>
    <div class="col">
      <label for ="work">Company Last Worked for:</label>
      <input type="text" class="form-control" name="work" required>
    </div>
  </div>
  <div class="row p-2 mb-4">
    <div class="col-6">
        <label for ="Skills">Technology Skills : </label>
        <input type="text" class="form-control" data-role="tagsinput" name="Skills" required/>
    </div>        
  </div>
  <div class="row mb-4">
    <div class="col">
      <label for ="experience">Years of work experience:</label>
      <input type="number" class="form-control" name="experience" required>
    </div>
    <div class="col">
      <label for ="salary">Expected Salary:</label>
      <input type="number" class="form-control" name="salary" required>
    </div>
  </div>
  <button type="submit" class="btn btn-primary text mt-4 ml-1" value="Apply">Apply</button>
</form>

